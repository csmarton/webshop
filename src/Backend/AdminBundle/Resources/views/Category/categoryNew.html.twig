{% extends "BackendLayoutBundle:Default:layout.html.twig" %}

{% block title%} {{page_name_admin}} - Új Kategóriák {% endblock %}
{% block bodyClass %}class="index_page"{% endblock%}
 
{% block javascripts %}
	{{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/backendadmin/js/Category.js') }}"></script>
    <script type="text/javascript">
            $(document).ready(function(){
                Category.init();
            });
    </script>
{% endblock %}
 
{% block main %} 
    <div class="main">        
        <form action="{{ path('backend_admin_category_new',{'categoryId':categoryId})}}" method="post" {{ form_enctype(form) }} name="newCategory"  class="newCategory">
            <table class="new_product_table">
                <tbody>
                    <tr>
                        <td>{{ form_label(form.name, 'Kategórianév:', { 'label_attr': {'class': 'labelText'}}) }}        </td>
                        <td>{{ form_widget(form.name, { 'attr': {'class': 'validate[required] categoryName'} } ) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.slug, 'Slug:', { 'label_attr': {'class': 'labelText'}}) }}        </td>
                        <td>{{ form_widget(form.slug) }}</td>
                    </tr>
                    
                    <tr>
                        <td>{{ form_label(form.mainCategory, 'Fő kategória:', { 'label_attr': {'class': 'labelText'}}) }}        </td>
                        <td>{{ form_widget(form.mainCategory, { 'attr': {'class': 'validate[required] mainCategory'} } ) }}</td>
                    </tr>    
                    <tr >
                        <td colspan="2">
                            <input type="submit" value="Mentés" class="menu_btn ok_btn">
                            <input type="reset" value="Mégse" class="menu_btn warning_btn cancel_btn">
                        </td>
                    </tr>
                </tbody>
            </table>            
            {{ form_widget(form._token) }}
        </form> 
    </div>
{% endblock %}