<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Frontend\OrderBundle\Entity\Order" table="order">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="userId" type="integer" column="user_id" nullable="false"/>
    <field name="itemsTotal" type="integer" column="items_total" nullable="false"/>
    <field name="itemsTotalPrice" type="integer" column="items_total_price" nullable="false"/>
    <field name="comment" type="text" column="comment" nullable="false"/>
    <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
    <field name="updatedAt" type="datetime" column="updated_at" nullable="false"/>
    <field name="paymentOptionId" type="integer" column="payment_option_id" nullable="false"/>
    <field name="shippingOptionId" type="integer" column="shipping_option_id" nullable="false"/>
    <field name="paymentState" type="string" column="payment_state" length="60" nullable="false"/>
    <field name="shippingState" type="string" column="shipping_state" length="60" nullable="false"/>
    <field name="acceptConditions" type="boolean" column="accept_conditions" nullable="false"/>
  </entity>
</doctrine-mapping>
