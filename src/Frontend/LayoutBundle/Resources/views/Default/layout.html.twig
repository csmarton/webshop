            <script type="text/javascript" src="{{ asset('js/jquery-sha256.js') }}"></script>
                <script type="text/javascript" src="{{ asset('js/jquery-flexslider-min.js') }}"></script>
            
            <script type="text/javascript">
                    $(document).ready(function(){
                        Shared.init();
                        SharedSearch.init();
                        Profile.init();
                        Cart.init();
                        UserValidation.init();
                        PasswordReset.init();
                        //$( "#leftMenu" ).accordion();
                    });
            </script>
            {% block stylesheets %}
            {% endblock %}
              
            {% block javascripts %}
            {% endblock %}
            <link rel="shortcut icon" href="{{ asset('bundles/frontendlayout/images/icon.png') }}" />
        {% endblock %}
    </head>
    <body {% block bodyClass %}{% endblock%}>
        {% block body %}
            {% block bodyStart %}
            {% endblock %}

            {% block header %}
                {% if searchKey is defined %}
                    {% set key = searchKey %}
                {% else %}
                    {% set key = null %}
                {% endif %}
                {{ render(controller("FrontendLayoutBundle:Default:header", {'searchKey' : key}))}}
            {% endblock %}
            	
            {% block mainContent %} 
                {% block main %}
                    {% block leftSide %}   
                        {% if mainCategory is defined %}        
                            {% render (controller("FrontendLayoutBundle:Default:sidebar", {'currentMainCategory' : mainCategory, 'currentCategory':category})) %}
                         {% else %}
                            {% render (controller("FrontendLayoutBundle:Default:sidebar", {'currentMainCategory' : null, 'currentCategory':null})) %}
                        {% endif %}
                    {% endblock %}
                {% endblock %}
            {% endblock %}
            <div class="clear"></div>
            {% block footer %}	
                {{ render(controller('FrontendLayoutBundle:Default:footer'))}}
            {% endblock %}
        {% endblock %}
    </body>
</html>
