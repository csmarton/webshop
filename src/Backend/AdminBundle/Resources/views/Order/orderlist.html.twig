{% extends "BackendLayoutBundle:Default:layout.html.twig" %}

{% block title%} {{page_name_admin}} - Rendelések {% endblock %}
{% block bodyClass %}class="index_page"{% endblock%}
 
{% block javascripts %}
	{{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/backendadmin/js/Order.js') }}"></script>
    <script type="text/javascript">
            $(document).ready(function(){
                Order.init();
            });
    </script>
{% endblock %}
{% block stylesheets %}   
    <link rel="stylesheet" href="{{ asset('bundles/backendadmin/css/Order.css') }}"/>
{% endblock %}
{% block main %} 
    <div class="main">
        <h2>Rendelések</h2>
        <div class="upperMenu">
            <div class="left-side">
                {% include "BackendAdminBundle:Order:orderFilter.html.twig"%}
            </div>
            <div class="right-side">                
                {#<a href="{{path('backend_admin_product_new')}}" class="menu_btn">Új Termék</a>#}
            </div>
            <div class="pages-box">
                {% include "BackendLayoutBundle:Default:pages.html.twig"%}
            </div>
        </div>
        <div id="order-table">
            {% include "BackendAdminBundle:Order:listOrderTable.html.twig" %}
        </div>
    </div>
    
<div id="modal-fulfill-order" class="reveal-modal">
    <div class="formContent">
        <div class="topSection">
            <div class="modal-content">
                <h2></h2>
                <div class="modal-information"></div>
            </div>
        </div>
        <div class="bottomSection">
            <div class="inputs">
                <div class="first-inputs">
                    <input type="button" class="fulfill-order-button menu_btn" value="Teljesít">                     
                    <input type="button" class="cancel exit-reveal-modal warning_btn cancel_btn menu_btn" value="Mégse"> 
                </div>
                <div class="second-inputs hide">             
                    <input type="button" class="exit-reveal-modal menu_btn" value="Ok"> 
                </div>
            </div>
        </div>
    </div>
</div>   
{% endblock %}
                  