{% extends "BackendLayoutBundle:Default:layout.html.twig" %}

{% block title%} Admin - Felhasználók {% endblock %}
{% block bodyClass %}class="index_page"{% endblock%}
 
{% block javascripts %}
	{{ parent() }}
    <script type="text/javascript">
            $(document).ready(function(){
            });
    </script>
{% endblock %}
 
{% block main %} 
    <div class="main">
        <h2>Felhasználók</h2>
        <div class="upperMenu">
            <div class="left-side">
                {#{% include "BackendAdminBundle:Product:productFilter.html.twig"%}#}
            </div>
            <div class="right-side">                
                <a href="{{path('backend_admin_user_new')}}" class="menu_btn">Új Felhasználó</a>
            </div>
            <div class="pages-box">
                {% include "BackendLayoutBundle:Default:pages.html.twig"%}
            </div>
        </div>
        
        <table class="shared-table">
            <thead>
                <tr>
                    {% set b = "asc" %}
                    {% set active = ""%}  
                    {% if order == "id" %}
                        {% if by == "asc" %}
                            {% set b = "desc" %}
                        {% else %}
                            {% set b = "asc" %}
                        {% endif %}
                        {% set active = "active"%}
                    {% endif %}
                    <th scope="col" class="{{active}}">        
                        <a href="?page=1{{parameters}}&order=id&by={{b}}"  class="{{b}}">Id</a>
                    </th>
                    {% set b = "asc" %}
                    {% set active = "" %}
                    {% if order == "email" %}
                        {% if by == "asc" %}
                            {% set b = "desc" %}
                        {% else %}
                            {% set b = "asc" %}
                        {% endif %}
                        {% set active = "active"%}    
                    {% endif %}
                    <th scope="col" class="{{active}}">        
                        <a href="?page=1{{parameters}}&order=email&by={{b}}"  class="{{b}}">Email</a>                
                    </th>
                    {% set b = "asc" %}
                    {% set active = "" %}
                    {% if order == "loginDate" %}
                        {% if by == "asc" %}
                            {% set b = "desc" %}
                        {% else %}
                            {% set b = "asc" %}
                        {% endif %}
                        {% set active = "active"%}    
                    {% endif %}
                    <th scope="col" class="{{active}}">        
                        <a href="?page=1{{parameters}}&order=loginDate&by={{b}}"  class="{{b}}">Utolsó bejelentkezés</a>                
                    </th>
                    <th scope="col">Admin jog</th>
                    <th scope="col">Műveletek</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.getId() }}</td>
                        <td>{{ user.getEmail() }}</td>
                        <td>{{ user.getLastLogin()|date('Y-m-d') }}</td> 
                        <td>
                            {% for role in user.getRoles() %}
                                {%if role == "ROLE_ADMIN" %}
                                    Van
                                {% endif %}
                            {% endfor %}
                        </td> 
                        <td class="product_edit_btn">
                            <a href="{{path('backend_admin_user_new',{'userId':user.getId()}) }}" class="menu_btn edit_btn">Szerkesztés</a>
                            <a href="#" class="deleteUser menu_btn warning_btn delete_btn" userId="{{user.getId()}}">Törlés</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        
    </div>
<div id="modal-delete-user" class="reveal-modal">
    <div class="formContent">
        <div class="topSection">
            <div class="modal-content">
                <h2>Biztosan törölni szeretnéd ezt a felhasználót? </h2>
            </div>
        </div>
        <div class="bottomSection">
            <div class="inputs">
                <input type="button" class="delete-user-button" value="Törlés" href="{{path('backend_admin_user_remove')}}">
                <input type="button" class="cancel exit-reveal-modal" value="Mégse">                        
            </div>
        </div>
    </div>
</div>    
{% endblock %}
                  