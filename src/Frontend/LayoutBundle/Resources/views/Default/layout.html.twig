<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
            <title>{% block title %}{% endblock %}</title>

            <link rel="stylesheet" href="{{ asset('bundles/frontendlayout/css/reset.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/accordion.css') }}"/>
            <link rel="stylesheet" href="{{ asset('bundles/frontendlayout/css/shared_logged.css') }}"/>
            <link rel="stylesheet" href="{{ asset('bundles/frontendlayout/css/cart.css') }}"/>
            
            <script type="text/javascript" src="{{ asset('js/jquery-2.1.0.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/jquery-ui-1.10.4/js/jquery-ui-1.10.4.custom.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/jquery.qtip.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/accordion.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/frontendlayout/js/Shared.js') }}"></script>
            <script type="text/javascript">
                    $(document).ready(function(){
                        Shared.init();
                        //$( "#leftMenu" ).accordion();
                    });
            </script>
            {% block stylesheets %}     
                <link rel="stylesheet" href="{{ asset('bundles/frontendproduct/css/product.css') }}"/>
                <link rel="stylesheet" href="{{ asset('js/jquery-ui-1.10.4/css/smoothness/jquery-ui-1.10.4.custom.css') }}"/>
            {% endblock %}
              
            {% block javascripts %}
            {% endblock %}
            <link rel="shortcut icon" href="{{ asset('bundles/frontendlayout/images/favicon.ico') }}" />
        {% endblock %}
    </head>
    <body {% block bodyClass %}{% endblock%}>
        {% block body %}
            {% block bodyStart %}
            {% endblock %}

            {% block header %}
                {{ render(controller("FrontendLayoutBundle:Default:header"))}}
            {% endblock %}
            	
            {% block mainContent %}
                <div class="maincontent">
                    <div class="wrapper">
                        
                        
                        {% block main %}
                            {% block leftSide %}                        
                                {% render (controller("FrontendProductBundle:Default:sidebar")) %}
                            {% endblock %}
                        {% endblock %}
                    </div>
                </div>
            {% endblock %}
            {% block footer %}	
                {{ render(controller('FrontendLayoutBundle:Default:footer'))}}
            {% endblock %}
        {% endblock %}
    </body>
</html>
