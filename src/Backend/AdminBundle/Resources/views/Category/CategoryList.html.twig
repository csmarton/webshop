{% extends "BackendLayoutBundle:Default:layout.html.twig" %}

{% block title%} Admin - Kategóriák {% endblock %}
{% block bodyClass %}class="index_page"{% endblock%}
 
{% block javascripts %}
	{{ parent() }}
        <link rel="stylesheet" href="{{ asset('bundles/backendadmin/css/Category.css') }}"/>
    <script type="text/javascript">
            $(document).ready(function(){
            });
    </script>
{% endblock %}
 
{% block main %} 
    <div class="main">
        <h2>Kategóriák</h2>
        <div class="upperMenu">
            <div class="left-side">
                {% include "BackendAdminBundle:Category:categoryFilter.html.twig"%}
            </div>
            <div class="right-side">                
                <a href="{{path('backend_admin_category_new')}}" class="menu_btn">Új kategória</a>
            <a href="{{path('backend_admin_main_category_new')}}" class="menu_btn">Új főkategória</a>
            </div>
            <div class="pages-box">
                {% include "BackendLayoutBundle:Default:pages.html.twig"%}
            </div>
            
        </div>
        <div id="categorys">
            {% include "BackendAdminBundle:Category:categoryListElement.html.twig" %}
        </div>    
    </div>
<div id="modal-delete-category" class="reveal-modal">
    <div class="formContent">
        <div class="topSection">
            <div class="modal-content">
                <h2>Biztosan törölni szeretnéd ezt a kategóriát? </h2>
            </div>
        </div>
        <div class="bottomSection">
            <div class="inputs">
                <input type="button" class="delete-category-button" value="Törlés" href="{{path('backend_admin_category_remove')}}">
                <input type="button" class="cancel exit-reveal-modal" value="Mégse">                        
            </div>
        </div>
    </div>
</div>    
{% endblock %}
                  