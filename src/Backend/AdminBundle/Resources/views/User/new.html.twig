{% extends "BackendLayoutBundle:Default:layout.html.twig" %}

{% block title%} WebShopAdmin - Új Felhasználók {% endblock %}
{% block bodyClass %}class="index_page"{% endblock%}
 
{% block javascripts %}
	{{ parent() }}
    <script type="text/javascript">
            $(document).ready(function(){
            });
    </script>
{% endblock %}
 
{% block main %} 
    <div class="main">        
        <form action="{{ path('backend_admin_user_new',{'userId':userId})}}" method="post" {{ form_enctype(form) }} name="newUser"  class="newUser">
            {% set disabled = (myUser.getId() != userId ) %}
            <table class="new_product_table">
                <tbody>
                    <tr>
                        <td>{{ form_label(form.username, 'Felhasználóinév:', { 'label_attr': {'class': 'labelText'}}) }}        </td>
                        <td>{{ form_widget(form.username) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.email, 'Email:', { 'label_attr': {'class': 'labelText'}}) }}        </td>
                        <td>{{ form_widget(form.email) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.password, 'Jelszó:', { 'label_attr': {'class': 'labelText'}}) }}        </td>
                        <td>{{ form_widget(form.password, {'attr': {'disabled': disabled }}) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.enabled, 'Engedélyezve:', { 'label_attr': {'class': 'labelText'}}) }}        </td>
                        <td>{{ form_widget(form.enabled) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.isAdmin, 'Admin jog:', { 'label_attr': {'class': 'labelText'}}) }}        </td>
                        <td>{{ form_widget(form.isAdmin) }}</td>
                    </tr>    
                    <tr >
                        <td colspan="2">
                            <input type="submit" value="Mentés" class="menu_btn ok_btn">
                            <input type="reset" value="Mégse" class="menu_btn warning_btn cancel_btn">
                        </td>
                    </tr>
                </tbody>
            </table>            
            {{ form_widget(form._token) }}
        </form>        
    </div>
{% endblock %}