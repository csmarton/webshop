            <script type="text/javascript" src="{{ asset('js/jquery-ui-1.10.4/js/jquery-ui-1.10.4.custom.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/jquery.qtip.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/jquery-slider-min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/jquery-autocomplete.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/accordion.js') }}"></script>
                <script type="text/javascript" src="{{ asset('js/jquery-flexslider-min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/jquery-accounting-min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/jquery-organictabs.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/frontendlayout/js/Shared.js') }}"></script>
