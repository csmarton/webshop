{% extends "FrontendLayoutBundle:Default:layout.html.twig" %}

{% block title%} WebShop - Kezdőlap {% endblock %}
{% block bodyClass %}class="index_page"{% endblock%}
 
{% block javascripts %}
	{{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/frontendproduct/js/Product.js') }}"></script>
    <script type="text/javascript">
            $(document).ready(function(){
                Product.init();
            });
    </script>
{% endblock %}
 
{% block main %}
    <div class="main">
        {% block leftSide %}                        
            {{parent()}}
        {% endblock %}        
        <div class="container">
            <div id="searcher">
                <div id="search_form">
                    {% include "FrontendSearchBundle:Search:laptopSearch.html.twig" %}
                </div>
                    <div id="search_toggle_button">Részletes keresés</div>		
            </div>
            <div id="upper-menu"  href="{{path('frontend_product_homepage')}}">
                {% include "FrontendProductBundle:Default:upperMenu.html.twig" %}
            </div>
            <div class="products_box">
                {% for product in products %}
                {% set i=loop.index0 %}
                {% if (product.getSlug() is not null)%}
                        {% set product_link = product.getSlug() %}
                {% else %}
                        {% set product_link = product.getId() %}
                {% endif %}
                <div class="product_box">
                        <div class="product_name"><a href="{{path('frontend_product_homepage')}}p/{{product_link}}">{{product.name}}</a></div>
                        <div class="upper_box">
                                <div class="image_container">
                                        <img src="
                                        {% if (product.getProductImages()|length != 0 ) %}
                                                  {{asset(product.getProductImages()[0].getWebPath())}}"/>
                                        {% else %}     
                                                {{ asset('images/no_image.jpg')}}"/>
                                        {% endif %}

                                </div>
                                <div class="right_box">
                                        <div class="product_price">
                                            {% if product.getSpecialOffer() is not null %}
                                                {{product.getSpecialOffer().getNewPrice|priceFormat}} Ft
                                            {% else%}
                                                {{product.getPrice()|priceFormat}}  Ft
                                            {% endif %}
                                               
                                        </div>
                                        <input class="to-cart-button" id = "cart_{{product.getId()}}" href ={{path('frontend_add_cart')}} type="button" value="Kosárba">
                                </div>    
                        </div>
                        <div class="bottom_box">
                                <ul>
                                    {% for property in product.getProductPropertys()%}
                                            <li>{{property.getValue()}}</li>
                                    {% endfor %}    
                                </ul>
                        </div>
                </div> 
                {% endfor %}    			
            </div>
        </div>
    </div>    
{% endblock %}
                        