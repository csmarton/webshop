{% if(actualPage-1<=0) %}
    {% set prevPage = actualPage %}
{% else %}
    {% set prevPage = actualPage-1 %}
{% endif %}

{% if(actualPage+1 > pageCount) %}
    {% set nextPage = actualPage %}
{% else %}
    {% set nextPage = actualPage+1 %}
{% endif %}

{% if (pageCount > 1) %}
    <ul class="pages">
        <li>
            <a href="order={{order}}&by={{by}}&page={{prevPage}}"><</a>
        </li>
        {% for i in range(1,pageCount)%}
            <li
                {%if actualPage == i %}
                    class="actual-page"
                {% endif %}>
                <a href="order={{order}}&by={{by}}&page={{i}}">{{i}}</a>
            </li>

        {% endfor %} 
        <li>
            <a href="order={{order}}&by={{by}}&page={{nextPage}}">></a>
        </li>
    </ul>
{% endif %}