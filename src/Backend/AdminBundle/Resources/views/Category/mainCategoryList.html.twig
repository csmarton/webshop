{% extends "BackendLayoutBundle:Default:layout.html.twig" %}

{% block title%} {{page_name_admin}} - Fő kategóriák {% endblock %}
{% block bodyClass %}class="index_page"{% endblock%}
 
{% block javascripts %}
	{{ parent() }}
    <script type="text/javascript">
            $(document).ready(function(){
            });
    </script>
{% endblock %}
 
{% block main %} 
    <div class="main">
        <h2>Fő kategóriák</h2>
        <div class="upperMenu">
            <a href="{{path('backend_admin_main_category_new')}}" class="menu_btn">Új főkategória</a>
        </div>
        <div id="main-categorys">
           <table class="shared-table">
                <thead class="big-header">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Főkategória</th>
                        <th scope="col">Műveletek</th>
                    </tr>
                </thead>
                <tbody>
                    {% for mainCategory in mainCategorys %}
                        <tr>
                            <td>{{ mainCategory.getId() }}</td>
                            <td>{{ mainCategory.getName() }}</td>
                            <td class="edit_btn">
                                <a href="{{path('backend_admin_main_category_new',{'mainCategoryId':mainCategory.getId()}) }}" class="menu_btn edit_btn">Szerkesztés</a>
                                <a href="#" class="deleteMainCategory menu_btn warning_btn delete_btn" mainCategoryId="{{mainCategory.getId()}}">Törlés</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        

        
    </div>
<div id="modal-delete-main-category" class="reveal-modal">
    <div class="formContent">
        <div class="topSection">
            <div class="modal-content">
                <h2>Biztosan törölni szeretnéd ezt a fő kategóriát? </h2>
            </div>
        </div>
        <div class="bottomSection">
            <div class="inputs">
                <input type="button" class="delete-main-category-button" value="Törlés" href="{{path('backend_admin_main_category_remove')}}">
                <input type="button" class="cancel exit-reveal-modal" value="Mégse">                        
            </div>
        </div>
    </div>
</div>    
{% endblock %}
                  