{% extends "FrontendLayoutBundle:Default:layout.html.twig" %}

{% block title%} WebShop - Kezd≈ëlap {% endblock %}
{% block bodyClass %}class="index_page"{% endblock%}

  {% block javascripts %}
    
	<script type="text/javascript">
		$(document).ready(function(){
			 $( "#leftMenu" ).accordion();
		});
	</script>
  {% endblock %}
{% block sidebar %}
    <div class="sidebar ">
        <div id="leftMenu">
            {% for t in leftMenu %}
            
                {% set l = false %}
                {% for val in t %}
                    {% if (not l)%}
                        {% set l = true %}                     
                        <h3><a href="#">{{val.getTaxonomy().getName()}}</a></h3>
                        <ul class="taxonomy"> 
                    {% endif %}
                   <li>
                       <a href="{{val.getPermalinks()}}">
                        {{val.getName()}} 
                       </a>
                   </li>
                {% endfor %}
                </ul>   
            {% endfor %}
        </div> 
    </div>
{% endblock %} 
        
{% block main %}
    <div class="main">
        {% render (controller("FrontendProductBundle:Default:mainProduct")) %}
    </div>
{% endblock %}
                        