<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Frontend\ProductBundle\Entity\Product" table="product">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="30" nullable="false"/>
    <field name="slug" type="string" column="slug" length="30" nullable="true"/>
    <field name="description" type="text" column="description" nullable="true"/>
    <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
    <field name="updatedAt" type="datetime" column="updated_at" nullable="false"/>
    <field name="shortDescription" type="string" column="short_description" length="100" nullable="true"/>
    <field name="price" type="float" column="price" precision="10" scale="0" nullable="false"/>
    <one-to-one field="productTaxon" target-entity="ProductTaxon" mapped-by="product" />
    <one-to-many field="productImages" target-entity="ProductImages" mapped-by="product" />
  </entity>
</doctrine-mapping>
